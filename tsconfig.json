{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "baseUrl": ".",
  "paths": {
    "@validators/*": ["./src/application/Validators/*"],
    "@errors/*": ["./src/application/Errors/*"],
    "@modules/*": ["./src/modules/*"],
  }
}
